local function CreateLoader()
    -- Ждем загрузку игры
    if not game:IsLoaded() then
        game.Loaded:Wait()
    end

    -- Создаем полноэкранный блокирующий интерфейс
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "FullscreenLoader"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.Parent = game:GetService("CoreGui")

    -- Полупрозрачный черный фон на весь экран
    local Background = Instance.new("Frame")
    Background.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Background.BackgroundTransparency = 0.4
    Background.BorderSizePixel = 0
    Background.Size = UDim2.new(1, 0, 1, 0)
    Background.Parent = ScreenGui

    -- Основное окно загрузки
    local MainFrame = Instance.new("Frame")
    MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    MainFrame.BorderSizePixel = 0
    MainFrame.Position = UDim2.new(0.5, -150, 0.5, -50)
    MainFrame.Size = UDim2.new(0, 300, 0, 100)
    MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    MainFrame.Parent = ScreenGui

    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 8)
    UICorner.Parent = MainFrame

    -- Текст загрузки (как в первом изображении)
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Text = "Loading script please be patient"
    TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TextLabel.Font = Enum.Font.SourceSansBold
    TextLabel.TextSize = 18
    TextLabel.TextWrapped = true
    TextLabel.BackgroundTransparency = 1
    TextLabel.Size = UDim2.new(0.9, 0, 0.9, 0)
    TextLabel.Position = UDim2.new(0.05, 0, 0.05, 0)
    TextLabel.Parent = MainFrame

    -- Анимация точек
    local dots = 0
    local maxDots = 3
    local connection

    local function update()
        dots = (dots + 1) % (maxDots + 1)
        TextLabel.Text = "Loading script please be patient" .. string.rep(".", dots)
    end

    connection = game:GetService("RunService").Heartbeat:Connect(function()
        update()
    end)

    -- Функция для удаления (если понадобится)
    local function RemoveLoader()
        connection:Disconnect()
        ScreenGui:Destroy()
    end

    return RemoveLoader
end

-- Запускаем загрузчик
CreateLoader()
